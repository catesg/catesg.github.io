---
sitemap:
  exclude: 'yes'
---
{%- assign date_format = site.date_format | default: "%b %-d, %Y" -%}
[
  {% for post in site.posts %}

    {%- assign cleanContent = post.content | strip_html -%}
    {%- assign cleanContent = cleanContent | replace: '“', '' -%}
    {%- assign cleanContent = cleanContent | replace: '”', '' -%}
    {%- assign cleanContent = cleanContent | replace: '‘', '' -%}
    {%- assign cleanContent = cleanContent | replace: '’', '' -%}
    {%- assign cleanContent = cleanContent | strip_newlines -%}

    {

      "title"    : "{{ post.title | escape }}",
      "content": "{{ cleanContent | replace: \n, '' }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "image"    : "{{ site.baseurl }}{{ post.image }}",
      "category" : "{{ post.category | join: ', ' }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "date"     : "{{ post.date | date: date_format }}"

    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]